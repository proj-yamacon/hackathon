<p id="notice"><%= notice %></p>

<h1>Listing Zones</h1>

<table>
  <thead>
    <tr>
      <th>Zone name</th>
      <th>Target temperature</th>
      <th>Current temperature</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @zones.each do |zone| %>
      <tr>
        <td><%= zone.zone_name %></td>
        <td><%= zone.target_temperature %></td>
        <td><%= zone.current_temperature %></td>
        <td><%= link_to 'Show', zone %></td>
        <td><%= link_to 'Edit', edit_zone_path(zone) %></td>
        <td><%= link_to 'Destroy', zone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

